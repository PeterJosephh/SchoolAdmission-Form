@model FormModelView


<div class="mt-3 row">
    
    <div class="col-8 formBox">
        <div>
            <center>
                <h2 class="">Admission Form</h2>
            </center>
            
            <hr>
        </div>
        <div id="accordion">
            <form method="post" id="form" asp-action="FormRespond" class="needs-validation" novalidate>
            <!--FOORMMM-->
            <div class="card">
                <!--card 1-->


                <div class="card-header" id="headingOne">
                    <h5 class="mb-0">
                        <button type="button" class="btn btn-link" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                            <h5>Student Information</h5>
                        </button>
                    </h5>
                </div>
                <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordion">
                    <div class="row card-body">
                        <!---1)First Form--->
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <h3>Student Information</h3>
                            <!--First NAme-->
                            <div class="col-md-6 form-group">
                                <label>First Name<b> *</b></label>
                                <input asp-for="Student_FirstName" type="text" class="form-control" required pattern="[A-Za-z]+">
                                <div class="invalid-feedback">
                                    Enter student first name
                                </div>
                            </div>

                            <div class="col-md-6 form-group">
                                <!--Last NAme-->
                                <label>Last Name<b> *</b></label>
                                <input asp-for="Student_SecoundName" type="text" class="form-control" required pattern="[A-Za-z]+">
                                <div class="invalid-feedback">
                                    Enter student last name
                                </div>
                            </div>
                            <!--Gender-->
                            <div class="col-md-6 form-group">
                                <label>Gender<b> *</b></label>
                                <select asp-for="Student_Gender" class="form-control" required>
                                    <option selected disabled value="">Gender</option>
                                    <option value='M' >Male</option>
                                    <option value='F' >Female</option>
                                </select>
                                <div class="invalid-feedback">
                                    Please choose Student Gender.
                                </div>


                            </div>
                            <!--Birthdate-->

                            <div class="col-md-6 form-group">
                                <label>Date of Birth<b> *</b></label>
                                <input asp-for="Student_DateOfBirth" type="date" class="form-control" required>
                                <div class="invalid-feedback">
                                    Please choose Student birth date.
                                </div>
                            </div>
                            <!--NID-->

                            <div class="form-group">
                                <label>Nationality ID<b> *</b></label>
                                <input asp-for="Student_NationalityId" type="text" class=" form-control" maxlength="14" minlength="14" pattern="\d+" required>
                                <div class="invalid-feedback">
                                    Enter Student Nationality Id
                                </div>
                            </div>

                            <!--City-->
                            <div class="col-md-4 form-group">
                                <label>City of birth<b> *</b></label>
                                <select asp-for="Student_CityOfBirth" class="form-control" required>
                                    <option selected disabled value="">City</option>
                                    <option>Cairo</option>
                                    <option>Alex</option>
                                </select>
                                <div class="invalid-feedback">
                                    Please choose Student city.
                                </div>


                            </div>
                            <!--address-->
                            <div class="col-md-8 form-group">
                                <label>Address of birth<b> *</b></label>
                                <input asp-for="Student_Address" type="text" class="form-control" id="inputAddress" placeholder="1234 Main St" required>
                                <div class="invalid-feedback">
                                    Enter Student Address
                                </div>
                            </div>

                            <!--Phone number-->

                            <div class="col-md-4 form-group">
                                <label>Phone Number<b> *</b></label>
                                <input asp-for="Student_PhoneNumber" type="text" class=" form-control" maxlength="11" minlength="11" pattern="\d+">
                                <div class="invalid-feedback">
                                    Invalid Student phone number
                                </div>
                            </div>
                            <!--Year Group Applying For -->
                            <div class="col-md-8 form-group">
                                <label>Year Group Applying For<b> *</b></label>
                                <select asp-for="RquestedYear" class="form-control" required>
                                    <option>KG 1</option>
                                    <option>KG 2</option>
                                    <option selected value="">Year 1</option>
                                    <option>Year 2</option>
                                    <option>Year 3</option>
                                    <option>Year 4</option>
                                    <option>Year 5</option> 
                                    <option>Year 6</option>
                                    <option>Year 7</option>
                                    <option>Year 8</option>
                                    <option>Year 9</option>
                                    <option>Year 10</option>
                                    <option>Year 11</option>
                                    <option>Year 12</option>
                                </select>
                                <div class="invalid-feedback">
                                    Please choose the Requested apply Year.
                                </div>
                            </div>
                    </div>
                </div>
            </div>  
            <div class="card">
                <div class="card-header" >
                    <h5 class="mb-0">
                        <button type="button" class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false">
                            Parents / Guardians Details
                        </button>
                    </h5>
                </div>
                <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordion">
                    <div class="row card-body">
                        <!--Secound Form 2-->
                            <h3>Guardian 1 (Father)</h3>
                            <!--First NAme-->
                            <div class=" col-md-6 form-group">
                                <label>First Name</label>
                                <input asp-for="Guardian1_FirstName" type="text" class="form-control" required pattern="[A-Za-z]+">
                                <div class="invalid-feedback">
                                    Please choose the birth date.
                                </div>

                            </div>
                            <div class="col-md-6 form-group">
                                <!--Last NAme-->
                                <label>Last Name</label>
                                <input asp-for="Guardian1_SecoundName" type="text" class="form-control" pattern="[A-Za-z]+" required>
                                <div class="invalid-feedback">
                                    Invalid Guardian First Name
                                </div>

                            </div>
                            <!--relation-->
                            <div class="col-md-6 form-group">
                                <label>Relationship to student</label>
                                <select asp-for="Guardian1_Relation" class="form-control" required>
                                    <option >Father</option>
                                    <option >Mother</option>
                                    <option >Grandmother</option>
                                    <option >Grandfather</option>
                                    <option >Guardian</option>
                                    <option >Aunt</option>
                                    <option >Uncle</option>
                                    <option >Cousin</option>
                                    <option >Sister</option>
                                    <option >Brother</option>
                                </select>
                                <div class="invalid-feedback">
                                    Please choose the Relationship to student.
                                </div>
                            </div>

                            <!--Gender-->
                            <div class="col-md-6 form-group">
                                <label>Gender<b> *</b></label>
                                <select asp-for="Guardian1_Gender" class="form-control" required>
                                    <option selected disabled value="">Gender</option>
                                    <option value='M'>Male</option>
                                    <option value='F'>Female</option>
                                </select>
                                <div class="invalid-feedback">
                                    Please choose Student Gender.
                                </div>
                            </div>

                            <!--Email-->

                            <div class="col-md-4 form-group">
                                <label>Email</label>
                                <input asp-for="Guardian1_Email" type="email" class="form-control" required pattern="[a-z0-9._%+\-]+@@[a-z0-9.\-]+\.[a-z]{2,}$">
                                <div class="invalid-feedback">
                                    Invalid Email Address
                                </div>
                            </div>
                            <!--Phone number-->
                            <div class="col-md-4  form-group">
                                <label>Phone number</label>
                                <input asp-for="Guardian1_PhoneNumber" type="text" class=" form-control" maxlength="11" minlength="11" pattern="\d+" required>
                                <div class="invalid-feedback">
                                    Invalid Phone number
                                </div>
                            </div>

                            <!--Proff-->
                            <div class="col-md-4 form-group">
                                <label>Profession</label>
                                <input asp-for="Guardian1_Pro" type="text" class="form-control" id="inputAddress" required pattern="[A-Za-z]+">
                                <div class="invalid-feedback">
                                    Invalid Profession
                                </div>
                            </div>
                            <!--NID-->

                            <div class="form-group">
                                <label>Nationality ID</label>
                                <input asp-for="Guardian1_NationalityId" type="text" required class="form-control" maxlength="14" minlength="14" pattern="\d+" required">
                                <div class="invalid-feedback">
                                    Invalid NationalityId
                                </div>
                            </div>

                            <hr class="mt-3">
                            <!--Paret 222--------------------------------->
                            <h3>Guardian 2 (Mother)</h3>
                            <!--First NAme-->
                            <div class=" col-md-6 form-group">
                                <label>First Name</label>
                                <input asp-for="Guardian2_FirstName" type="text" class="form-control" required pattern="[A-Za-z]+">
                                <div class="invalid-feedback">
                                    Please choose the birth date.
                                </div>

                            </div>
                            <div class="col-md-6 form-group">
                                <!--Last NAme-->
                                <label>Last Name</label>
                                <input asp-for="Guardian2_SecoundName" type="text" class="form-control" pattern="[A-Za-z]+" required>
                                <div class="invalid-feedback">
                                    Invalid Guardian First Name
                                </div>

                            </div>
                            <!--relation-->
                            <div class="col-md-6 form-group">
                                <label>Relationship to student</label>
                                <select asp-for="Guardian2_Relation" class="form-control" required>
                                    <option>Father</option>
                                    <option selected >Mother</option>
                                    <option>Grandmother</option>
                                    <option>Grandfather</option>
                                    <option>Guardian</option>
                                    <option>Aunt</option>
                                    <option>Uncle</option>
                                    <option>Cousin</option>
                                    <option>Sister</option>
                                    <option>Brother</option>
                                </select>
                                <div class="invalid-feedback">
                                    Please choose the Relationship to student.
                                </div>
                            </div>

                            <!--Gender-->
                            <div class="col-md-6 form-group">
                                <label>Gender<b> *</b></label>
                                <select asp-for="Guardian2_Gender" class="form-control" required>
                                    <option selected disabled value="">Gender</option>
                                    <option value='M'>Male</option>
                                    <option value='F'>Female</option>
                                </select>
                                <div class="invalid-feedback">
                                    Please choose Student Gender.
                                </div>
                            </div>

                            <!--Email-->

                            <div class="col-md-4 form-group">
                                <label>Email</label>
                                <input asp-for="Guardian2_Email" type="email" required class="form-control" pattern="[a-z0-9._%+\-]+@@[a-z0-9.\-]+\.[a-z]{2,}$">
                                <div class="invalid-feedback">
                                    Invalid Email Address
                                </div>
                            </div>
                            <!--Phone number-->
                            <div class="col-md-4  form-group">
                                <label>Phone number</label>
                                <input asp-for="Guardian2_PhoneNumber" type="text" class=" form-control" maxlength="11" minlength="11" pattern="\d+" required>
                                <div class="invalid-feedback">
                                    Invalid Phone number
                                </div>
                            </div>

                            <!--Proff-->
                            <div class="col-md-4 form-group">
                                <label>Profession</label>
                                <input asp-for="Guardian2_Pro" type="text" class="form-control" id="inputAddress" required pattern="[A-Za-z]+">
                                <div class="invalid-feedback">
                                    Invalid Profession
                                </div>
                            </div>
                            <!--NID-->

                            <div class="form-group">
                                <label>Nationality ID</label>
                                <input asp-for="Guardian2_NationalityId" type="text" required class="form-control" maxlength="14" minlength="14" pattern="\d+" required">
                                <div class="invalid-feedback">
                                    Invalid NationalityId
                                </div>
                            </div>

                           
                    </div>
                </div>
            </div>

                <div>
                    <button type="submit" id="submit" class="col-2 mt-3 btn btn-primary">Submit</button>
                </div>

            </form><!--FOORMMM-->
        </div>


  
</div>
</div>
